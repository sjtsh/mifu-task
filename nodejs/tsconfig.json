{
    "compilerOptions": {
        "target": "ES2018",
        "module": "commonjs",
        "outDir": "./bin/.cache",
        "strict": true,
        "moduleResolution": "node",
        "esModuleInterop": true,
        "skipLibCheck": true,
        "allowJs": true,
        "forceConsistentCasingInFileNames": true,
        "baseUrl": ".",
        "paths": {
            "/opt/nodejs/services/*": ["services/*"],
            "/opt/nodejs/utils/*": ["utils/*"]
        }
    },
    "include": ["src/**/*", "utils/**/*", "services/**/*", "**/*.ttf", "**/*.png"],
    "exclude": ["node_modules", "**/*.spec.ts"]
}
